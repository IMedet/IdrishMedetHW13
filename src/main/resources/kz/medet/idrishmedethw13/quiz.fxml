<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="kz.medet.idrishmedethw13.QuizController" spacing="10" alignment="TOP_LEFT">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label fx:id="questionLabel" style="-fx-font-size: 16;" />
    <RadioButton fx:id="answer1" />
    <RadioButton fx:id="answer2" />
    <RadioButton fx:id="answer3" />
    <RadioButton fx:id="answer4" />
    <Label fx:id="feedbackLabel" style="-fx-text-fill: green;" />
    <Button fx:id="nextButton" text="Next" onAction="#handleNextButtonAction" />
</VBox>
